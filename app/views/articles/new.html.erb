<h2>記事を書く</h2>

<div class="row">
  <div class="col-sm-12">
    <form class="" action="index.html" method="post">
      <div class="form-group">
        <label for="article_title">タイトル</label>
        <input id="article_title" class="form-control" type="text" name="title" value="">
      </div>

      <div class="form-group">
        <label for="article_publish_on">公開日時</label>
        <input id="article_publish_on" class="form-control" type="datetime" name="publish_on" value="">
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="article_body">本文</label>
            <textarea id="article_body" class="form-control" name="body" rows="24" cols="160" onchange="editor.preview()"></textarea>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="form-group">
            <label for="article_body">プレビュー</label>
            <div id="preview">
              (ここに表示されます)
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <button class="btn btn-info">プレビュー</button>
        &nbsp;
        <button class="btn btn-primary">保存する</button>
      </div>
    </form>
  </div>
</div>
